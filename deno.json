{
  "compilerOptions": {
    "lib": ["deno.window", "deno.unstable"],
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact"
  },
  "tasks": {
    "start": "deno run --allow-net --allow-read --allow-write --allow-env --unstable src/main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-net --allow-run"
  },
  "imports": {
    "@/": "./src/",
    "std/": "https://deno.land/std@0.224.0/",
    "dotenv/": "https://deno.land/std@0.224.0/dotenv/",
    "sqlite/": "https://deno.land/x/sqlite@v3.8.0/mod.ts/",
    "handlebars/": "https://deno.land/x/handlebars@v1.0.0/mod.ts/"
  }
}